<div class="containerleft">

<%= flash[:notice] %>

<h1>User info</h1>

<table class="table">
  <tr>
  <% if @book.user.profile_image.attached? %>
  <%= image_tag @book.user.profile_image.variant(resize_to_limit: [100, 100]) %>
  <% else %>
  <%= image_tag 'sss.jpg' %>
<% end %>
</tr>

<tr><th>name</th><td><%= @book.user.name %></td></tr>
<tr><th>introduction</th><td><%= @book.user.introduction %></td></tr>

</table>



<%= link_to  user_path(current_user.id) do%><span class="botton3">
  <i class="fas fa-user-cog"></i></span><% end %>



<h1>New book</h1>
  <%= form_with model: Book.new, url:'/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %><br>
  <%= f.submit  do %><span class="botton4">Create Book<span><% end %>
<% end %>
</div>